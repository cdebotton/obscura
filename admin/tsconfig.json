{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["esnext", "es6", "dom"],
    "outDir": "./.tmp/ts",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./src"]
}

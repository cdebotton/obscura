{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.tmp/**": true,
    "**/dist/**": true
  },
  "editor.formatOnSave": true,
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "stylelint.additionalDocumentSelectors": ["ts", "tsx"],
  "stylelint.config": {
    "extends": "./admin/.stylelintrc"
  }
}
